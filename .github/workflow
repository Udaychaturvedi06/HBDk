# This is a sample file, e.g., .github/workflows/deploy.yml

name: Build and Deploy Jekyll Site

# This runs on a push to the 'main' branch
on:
  push:
    branches: ["main"]
  
  # This allows you to run it manually from the Actions tab
  workflow_dispatch:

jobs:
  build_and_deploy:
    runs-on: ubuntu-latest # Use the latest server version
    
    steps:
      # 1. Checks out your repository's code
      - name: Checkout
        uses: actions/checkout@v4

      # 2. Sets up the Ruby environment
      - name: Set up Ruby
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: 3.1 # Or the version in your Gemfile
          bundler-cache: true # Installs gems from Gemfile.lock
      
      # 3. Builds the site (THIS IS THE CRITICAL STEP)
      - name: Build site
        run: bundle exec jekyll build # <-- Must use 'bundle exec'
        
      # 4. (Example) Deploys the built site to GitHub Pages
      - name: Deploy
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./_site # The folder jekyll builds to
